<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.registration.OTPVerificationFragment"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/arrowback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_back"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/otp_text"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        style="@style/loginBig"/>
    <TextView
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/OTPmainText"
        android:gravity="center"
        android:layout_marginTop="8dp"
        style="@style/loginSmall"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP Код"
        android:layout_gravity="left"
        android:layout_marginTop="16dp"
        style="@style/loginBig"
        android:layout_marginLeft="34dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_gravity="center">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/one"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_for_otp"
            android:inputType="number"
            android:gravity="center"
            android:layout_marginRight="12dp"
            android:focusable="true"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/two"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_for_otp"
            android:inputType="number"
            android:gravity="center"
            android:focusable="true"
            android:layout_marginRight="12dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/three"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_for_otp"
            android:inputType="number"
            android:gravity="center"
            android:layout_marginRight="12dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/four"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_for_otp"
            android:inputType="number"
            android:gravity="center"
            android:layout_marginRight="12dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/five"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_for_otp"
            android:inputType="number"
            android:gravity="center"
            android:layout_marginRight="12dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/six"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_for_otp"
            android:inputType="number"
            android:gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="25dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/senadAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отправить заново"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:30"/>

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logindtnn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_btn"
        android:layout_marginTop="150dp"
        android:text="Отправить"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:textAllCaps="false"
        style="@style/blueBTN" />


</LinearLayout>