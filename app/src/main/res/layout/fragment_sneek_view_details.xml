<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.SneekViewDetailsFragment"
    android:orientation="vertical"
    android:background="#F7F7F9">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#F7F7F9">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/arrowBack"
                android:layout_width="25dp"
                android:layout_height="18dp"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icon_back" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/titlePage"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="text"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/shopBagFromToolbar"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:src="@drawable/shopping_bag_red" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="20dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nameSneekers"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Nike Air Max 270 Essential"
            style="@style/snekShopTitle"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/categSneekers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Men’s Shoes"
            style="@style/snekShopSubTitle"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/priceSneekers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₽179.39"
            style="@style/snekShopTitle"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/photoFromServer"
        android:layout_width="272dp"
        android:layout_height="160dp"
        android:layout_gravity="center" />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/slider__1_"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/shose_ico"
            android:src="@drawable/img_hero"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/shose_ico"
            android:src="@drawable/img_hero"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/shose_ico"
            android:src="@drawable/img_hero"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/shose_ico"
            android:src="@drawable/img_hero"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/shose_ico"
            android:src="@drawable/img_hero"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Вставка Max Air 270 обеспечивает непревзойденный комфорт в течение всего дня. Изящный дизайн ........"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/podrobnee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подробнее"
        android:layout_gravity="right"
        android:layout_marginRight="24dp"
        android:layout_marginTop="9dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="40dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/heartttt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_heart"
            android:layout_marginRight="40dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/inSHopBag"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="14dp"
            app:cardBackgroundColor="#48B2E7">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shop_bag"
                android:layout_gravity="center"
                android:layout_marginRight="60dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="В корзину"
                android:layout_gravity="center"
                style="@style/blueBTN"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>